    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch on console",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/gekko.js",
            "args": [
                "--config", "config.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch UI",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/gekko.js",
            "args": [
                "--ui"
            ]
        }
    ]
}